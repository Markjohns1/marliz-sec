{
    # Use the ACME staging endpoint for testing if needed, or default prod
    # email your-email@example.com
}

marlizintel.tymirahealth.com {
    # Match all requests EXCEPT .well-known/acme-challenge
    @not_acme {
        not path /.well-known/*
    }

    # Proxy only non-ACME requests to the backend
    reverse_proxy @not_acme web:3000 {
        header_up Host {upstream_hostport}
        header_up X-Real-IP {remote}
    }
    
    # Enable gzip compression
    encode gzip
    
    # Basic logging
    log {
        output stdout
    }
}
