{
    # Use the ACME staging endpoint for testing if needed, or default prod
    # email your-email@example.com
}

marlizintel.tymirahealth.com {
    # Handle ACME challenges specifically by not proxying them (Caddy handles them internally)
    handle /.well-known/* {
        respond 404
    }

    # Proxy everything else to the backend
    handle {
        reverse_proxy web:3000 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote}
        }
    }
    
    # Enable gzip compression
    encode gzip
    
    # Basic logging
    log {
        output stdout
    }
}
